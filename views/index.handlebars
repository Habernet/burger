{{!-- This is where we will write all of the main page...this is a one page application. --}}
<main>
    <div class="container">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                {{!-- Burger image --}}
                <h1 class="centered">Eat Da Burgers!</h1>
            </div>
            <div class="col-sm-3"></div>
        </div>
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="burger">
                    <img src="./assets/images/burger.jpg" alt="Burger!">
                    <p>{{this.burger_name}}</p>
                    <form action="/api/burgers/{{this.id}}?_method=PUT" method="post">
                        <button type="submit" class="burger-ready btn btn-secondary btn-sm">EAT ME</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-5">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class="devoured">
                    <img src="./assets/images/eaten.jpg" alt="Burger!">
                    <p>{{this.burger_name}}</p>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="add-section">
                    <h1 class="centered">Add a burger!</h1>
                    <div class="centered">
                        <form action="/api/burgers" method="post">
                            <input type="text" name="burger_name" id="name" required>
                            <button type="submit" class="btn btn-dark submit-burger"> Add my burger! </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
</main>